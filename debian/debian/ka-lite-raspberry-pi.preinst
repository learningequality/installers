#!/bin/bash

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.
#SCRIPTSCOMMON#

# Load debconf library
. /usr/share/debconf/confmodule

kalite_nginx_divert_add

kalite_preinst
kalite_preinst_size_check

db_set ka-lite/nginx-rpi true
db_fset ka-lite/nginx-rpi seen true

PYTHON_SETUP_PY='from kalite.project.settings.raspberry_pi import *'
db_set ka-lite/kalite-setup "$PYTHON_SETUP_PY"
db_fset ka-lite/kalite-setup seen true

db_stop

